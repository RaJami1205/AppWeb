@page
@model AppWeb.Pages.Departamento.Depa_listModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Departamentos</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h2 class="mb-4">Lista de Departamentos</h2>
        @if (Model.listaDepartamentos.Count == 0)
        {
            <p>No hay departamentos disponibles.</p>
        }
        else
        {
            <table class="table table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>Código</th>
                        <th>Nombre</th>
                        <th>Cédula del Jefe</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var departamento in Model.listaDepartamentos)
                    {
                        <tr>
                            <td>@departamento.codigo</td>
                            <td>@departamento.nombre</td>
                            <td>@departamento.cedula_jefe</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</body>
</html>
